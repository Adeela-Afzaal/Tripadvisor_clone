<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000000"
    tools:context=".ReviewsFragment">

    <!-- Title -->

    <!-- No Reviews Yet Text -->
    <TextView
        android:id="@+id/review_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Review"
        android:textColor="#FFFFFF"
        android:textSize="34dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Write a Review and Upload Photo Buttons -->

    <TextView
        android:id="@+id/no_reviews_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="No reviews yet"
        android:textColor="#FFFFFF"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/review_title" />

    <!-- New TextView below "No reviews yet" -->
    <TextView
        android:id="@+id/additional_text"
        android:layout_width="280dp"
        android:layout_marginStart="20dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="You have not written any reviews yet, get started!"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/no_reviews_text" />



    <LinearLayout
        android:id="@+id/review_buttons"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/no_reviews_text">

        <Button
            android:layout_marginStart="30dp"
            android:id="@+id/write_review_button"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:background="@drawable/transparent_button"
            android:text="Write a review"
            android:textColor="#FFFF" />

        <Button
            android:id="@+id/upload_photo_button"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/transparent_button"
            android:text="Upload a photo"
            android:textColor="#ffff" />
    </LinearLayout>

    <!-- Background Image Block -->
    <ImageView
        android:id="@+id/review_background_image"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="45dp"
        android:src="@drawable/stonehenge"
        android:scaleType="centerCrop"
        android:alpha="0.5"
        app:layout_constraintTop_toBottomOf="@+id/review_buttons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Text on Background -->
    <!-- New TextView below "We want you to write us a review" -->
    <TextView
        android:id="@+id/review_background_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="We want you to write us a review"
        android:textColor="#FFFFFF"
        android:textSize="38dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.261"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/review_background_image" />

    <TextView
        android:id="@+id/review_background_subtext"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Bacause who else would we turn to for travel advice?"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.261"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/review_background_text" />

    <!-- Button below the new text -->
    <Button
        android:id="@+id/submit_review_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button_white"
        android:text="What to know"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/review_background_subtext" />




</androidx.constraintlayout.widget.ConstraintLayout>

