<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".LocationPermissionActivity">

    <ImageView
        android:id="@+id/locationIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/skin_circle"
        android:src="@drawable/purple_location"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="50dp" />




    <!-- Description Text -->
    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:text="Discover traveler recommended spots near you, wherever you are."
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:textStyle="bold"
        android:gravity="center"
        android:lineSpacingExtra="8dp"
        android:textAlignment="textStart"
        app:layout_constraintTop_toBottomOf="@id/locationIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Allow Location Button -->
    <Button
        android:id="@+id/allowLocationButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Allow location data"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold"
        android:background="@drawable/rounded_button_white"
        app:layout_constraintTop_toBottomOf="@id/descriptionText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="200dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp" />

    <!-- Not Now Text -->
    <TextView
        android:id="@+id/notNowText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Not now"
        android:textColor="#FFFFFF"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/allowLocationButton" />

</androidx.constraintlayout.widget.ConstraintLayout>
