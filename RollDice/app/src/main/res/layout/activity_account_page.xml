<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="16dp">

        <!-- Heading and circle picture -->
    <TextView
    android:id="@+id/accountHeading"
    android:layout_width="wrap_content"
    android:layout_height="50dp"

    android:text="Account"
    android:textColor="#FFFFFF"
    android:textSize="24sp"
    android:layout_alignParentStart="true" />

    <!-- Gray block with paragraph and button -->

    <ImageView
        android:id="@+id/profilePicture"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="285dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@id/accountHeading"
        android:src="@drawable/circle_shape" />

    <LinearLayout

    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_below="@id/accountHeading"
    android:orientation="vertical"
    android:layout_marginTop="27dp"
    android:padding="16dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#202020">  <!-- Gray block -->

    <TextView
        android:id="@+id/paragraph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Sign in to manage your bookings and easily plan your next trip"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/actionButton"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign in"
        android:textColor="@color/black"
        android:background="@drawable/rounded_button_white"
 />

    </LinearLayout>

        <!-- Preferences section -->
    <LinearLayout
        android:layout_marginTop="270dp"
    android:id="@+id/preferencesSection"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:layout_below="@id/paragraph"
    android:orientation="horizontal"
    android:padding="16dp"
    >

    <ImageView
        android:id="@+id/settingsIcon"
        android:layout_marginTop="12dp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_settings" />

    <TextView
        android:layout_marginTop="0dp"
        android:layout_width="30dp"
        android:textSize="20dp"
        android:layout_height="50dp"
        android:text="Preferences"
        android:textColor="#FFFFFF"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_marginStart="30dp"/>

    <ImageView
        android:id="@+id/arrowIcon"
        android:layout_marginTop="13dp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/arrow_right" />

    </LinearLayout>
    <!-- Settings Section (copy of Preferences) -->
    <!-- Horizontal Gray Line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/preferencesSection"
        android:background="#808080"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />
    <LinearLayout
        android:layout_below="@id/preferencesSection"

        android:id="@+id/supportSection"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginTop="3dp">

        <ImageView
            android:id="@+id/settingsIcon"
            android:layout_marginTop="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_support" />

        <TextView
            android:layout_marginTop="0dp"
            android:layout_width="30dp"
            android:textSize="20dp"
            android:layout_height="45dp"
            android:text="Settings"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginStart="30dp" />

        <ImageView
            android:id="@+id/arrowIconSettings"
            android:layout_marginTop="13dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/arrow_right" />
    </LinearLayout>
    <!-- Horizontal Gray Line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/supportSection"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="8dp"
        android:background="#808080" />

</RelativeLayout>
